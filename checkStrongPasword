"use strict";

function isLetter(char) {
    let charIndex = char.toUpperCase().charCodeAt();
    if (charIndex >= "A".charCodeAt() && charIndex <= "Z".charCodeAt()) {
        return true;
    }
}

function isUpper(char) {
    if (isLetter(char) && (char.toUpperCase() === char)) {
        return true;
    }
}

function isLower(char) {
    if (isLetter(char) && (char.toLowerCase() === char)) {
        return true;
    }
}

function isStrongPassword(password) {
    let hasUpper = false;
    let hasLower = false;
    let hasNumber = false;
    let hasOther = false;
    if (password.length < 7)
        return false;
    for (let ch of password) {
        if (isUpper(ch))
            hasUpper = true;
        else if (isLower(ch))
            hasLower = true;
        else if (!isNaN(ch))
            hasNumber = true;
        else
            hasOther = true;
    }
    console.log(`has upper = ${hasUpper}
has lower = ${hasLower}
has number = ${hasNumber}
has other = ${hasOther}`)
    return (hasUpper && hasLower && hasNumber && hasOther)
}